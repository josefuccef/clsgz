<!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>تعديل المباريات</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f9;
      color: #333;
      direction: rtl;
    }

    h1 {
      text-align: center;
      margin: 20px 0;
      color: #2c3e50;
    }

    form {
      width: 90%;
      margin: 0 auto;
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .match-container {
      border-bottom: 3px solid gold;
      padding: 15px 0;
    }

    .match-container:last-child {
      border-bottom: none;
    }

    h3 {
      margin-bottom: 10px;
      color: #2980b9;
      font-size: 20px ;
      font-weight: 900;
      text-align: center;
    }

    label {
      display: block;
      margin: 10px 0 5px;
      font-weight: bold;
    }

    input[type="text"] {
      width: 90%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .buttons {
      display: flex;
      justify-content: space-between;
      gap: 10px;
      margin-top: 20px;
    }

    button {
      display: block;
      width: 48%;
      padding: 10px;
      background: #3498db;
      color: #fff;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      cursor: pointer;
    }

    button:hover {
      background: #2980b9;
    }

    .delete-btn {
      background: #e74c3c;
    }

    .delete-btn:hover {
      background: #c0392b;
    }

    .reload-btn {
      background: #27ae60;
    }

    .reload-btn:hover {
      background: #1e8449;
    }
  </style>
</head>
<body>
  <h1>تعديل بيانات المباريات</h1>
  <form method="POST" action="/update">
  <% matches.forEach((match, index) => { %>
    <div class="match-container">
      <h3>مباراة <%= index + 1 %></h3>
      <label for="team1-<%= index %>">الفريق 1:</label>
      <input type="text" id="team1-<%= index %>" name="matches[<%= index %>][team1]" value="<%= match.team1 %>" />

      <label for="logo1-<%= index %>">الشعار 1:</label>
      <input type="text" id="logo1-<%= index %>" name="matches[<%= index %>][logo1]" value="<%= match.logo1 %>" />
      
            <label for="team2-<%= index %>">الفريق 2:</label>
      <input type="text" id="team2-<%= index %>" name="matches[<%= index %>][team2]" value="<%= match.team2 %>" />

      <label for="logo2-<%= index %>">الشعار 2:</label>
      <input type="text" id="logo2-<%= index %>" name="matches[<%= index %>][logo2]" value="<%= match.logo2 %>" />

      <label for="time-<%= index %>">الوقت:</label>
      <input type="text" id="time-<%= index %>" name="matches[<%= index %>][time]" value="<%= match.time %>" />

      <label for="status-<%= index %>">الحالة:</label>
      <input type="text" id="status-<%= index %>" name="matches[<%= index %>][status]" value="<%= match.status %>" />
      
       <label for="moaalik-<%= index %>">القناة ناقلة:</label>
      <input type="text" id="moaalik-<%= index %>" name="matches[<%= index %>][moaalik]"
      value="<%= match.moaalik %>" />

      <label for="competition-<%= index %>">المسابقة:</label>
      <input type="text" id="competition-<%= index %>" name="matches[<%= index %>][competition]" value="<%= match.competition %>" />

      <label for="link-<%= index %>">الرابط:</label>
      <input type="text" id="link-<%= index %>" name="matches[<%= index %>][link]" value="<%= match.link %>" />
    </div>
  <% }) %>
  <div class="buttons">
    <button type="submit">حفظ التعديلات</button>
    <button type="button" class="delete-btn" onclick="clearData()">مسح البيانات</button>
    <button type="button" class="reload-btn" onclick="reloadData()">إعادة جلب البيانات</button>
  </div>
</form>

<script>
  function clearData() {
    if (confirm("هل أنت متأكد من مسح جميع البيانات؟")) {
      window.location.href = "/clear";
    }
  }

  function reloadData() {
    if (confirm("هل تريد إعادة جلب البيانات من الموقع؟")) {
      window.location.href = "/reload";
    }
  }
</script>
</body>
</html>